<div class="identityHeader">
    <h1>New Meetup</h1>
</div>
<div class="pageContent">
    <form>
        <div class="meetupMetaGroup">
            <!--Title-->
            <div class="formGroup titleField">
                <h2 class="labelHeader">
                    <label for="titleBox">Title</label>
                </h2>
                <input class="formField" type="text" name="titleBox" id="titleBox" required/>
            </div>
            <!--Sport-->
            <div class="formGroup metaField">
                <h2 class="labelHeader">
                    <label for="sportSelect">Sport</label>
                </h2>
                <select class="formField" name="sportSelect" id="sportSelect">
                    <option>any</option>
                    {{#each sports}}
                        <option>{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <!--Date-->
            <div class="formGroup metaField">
                <h2 class="labelHeader">
                    <label for="datePicker">Date</label>
                </h2>
                <input class="formField" type="datetime-local" name="datePicker" id="datePicker"/>
            </div>
        </div>
        <!--Description-->
        <div class="formGroup">
            <h2 class="labelHeader">
                <label for="descriptionBox">Description</label>
            </h2>
            <textarea class="formField descriptionField" name="descriptionBox" id="descriptionBox" required></textarea>
        </div>
        <div class="formGroup">
            <button class="button" name="submitButton" type="submit">Host meetup!</button>
        </div>
    </form>
</div>
