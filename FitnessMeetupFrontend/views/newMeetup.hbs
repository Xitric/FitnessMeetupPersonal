<div class="container">
    <h1>New Meetup</h1>
    <form>
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="titleBox" required/>
        </div>
        <div class="form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" name="descriptionBox " id="description" required/>
        </div>
        <div class="form-group">
            <label for="date"> Date</label>
            <input type="datetime-local" id="date" name="datePicker"/>
        </div>
        <div class="form-group">
            <select name="sportSelect" class="form-control">
                <option>any</option>
                {{#each sports}}
                    <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <button name="submitButton" type="submit">Submit</button>
    </form>
</div>
